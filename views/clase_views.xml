<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_clase_tree" model="ir.ui.view">
            <field name="name">gestion_academy.clase.tree</field>
            <field name="model">gestion_academy.clase</field>
            <field name="arch" type="xml">
                <list string="Clases">
                    <field name="nombre"/>
                    <field name="codigo"/>
                    <field name="curso_id"/>
                    <field name="dia_semana"/>
                    <field name="estado"/>
                </list>
            </field>
        </record>

        <record id="view_clase_form" model="ir.ui.view">
            <field name="name">gestion_academy.clase.form</field>
            <field name="model">gestion_academy.clase</field>
            <field name="arch" type="xml">
                <form string="Clase">
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="codigo"/>
                            <field name="curso_id"/>
                            <field name="profesor_id"/>
                        </group>
                        <group>
                            <field name="dia_semana"/>
                            <field name="hora_inicio"/>
                            <field name="hora_fin"/>
                            <field name="capacidad_maxima"/>
                        </group>
                        <group>
                            <field name="ubicacion"/>
                            <field name="estado"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_clase" model="ir.actions.act_window">
            <field name="name">Clases</field>
            <field name="res_model">gestion_academy.clase</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_clase" name="Clases" action="action_clase" parent="menu_gestion_academy_root"/>
    </data>
</odoo>
