<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_curso_tree" model="ir.ui.view">
            <field name="name">gestion_academy.curso.tree</field>
            <field name="model">gestion_academy.curso</field>
            <field name="arch" type="xml">
                <list string="Cursos">
                    <field name="nombre"/>
                    <field name="nivel"/>
                    <field name="precio"/>
                </list>
            </field>
        </record>

        <record id="view_curso_form" model="ir.ui.view">
            <field name="name">gestion_academy.curso.form</field>
            <field name="model">gestion_academy.curso</field>
            <field name="arch" type="xml">
                <form string="Curso">
                    <sheet>
                        <h1>
                            <field name="nombre"/>
                        </h1>
                        <group>
                            <field name="nivel"/>
                            <field name="precio"/>
                            <field name="estado"/>
                            <field name="profesor_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_curso" model="ir.actions.act_window">
            <field name="name">Cursos</field>
            <field name="res_model">gestion_academy.curso</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_curso" name="Cursos" action="action_curso" parent="menu_gestion_academy_root"/>
    </data>
</odoo>
