<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_alumno_tree" model="ir.ui.view">
            <field name="name">gestion_academy.alumno.tree</field>
            <field name="model">gestion_academy.alumno</field>
            <field name="arch" type="xml">
                <list string="Alumnos">
                    <field name="nombre"/>
                    <field name="email"/>
                    <field name="estado"/>
                </list>
            </field>
        </record>

        <record id="view_alumno_form" model="ir.ui.view">
            <field name="name">gestion_academy.alumno.form</field>
            <field name="model">gestion_academy.alumno</field>
            <field name="arch" type="xml">
                <form string="Alumno">
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="apellidos"/>
                            <field name="email"/>
                            <field name="estado"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_alumno" model="ir.actions.act_window">
            <field name="name">Alumnos</field>
            <field name="res_model">gestion_academy.alumno</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_alumno" name="Alumnos" action="action_alumno" parent="menu_gestion_academy_root"/>
    </data>
</odoo>
